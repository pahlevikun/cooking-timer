<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_4sdp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/Text.H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="Kamu bisa mengganti bahasa aplikasi dengan pilihan bahasa yang ada dibawah ini ya" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/Text.B2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="Kamu bisa mengganti bahasa aplikasi dengan pilihan bahasa yang ada dibawah ini ya" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarkLight"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reject"
            style="@style/DigiButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/alert_dialog_language_button_cancel" />

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/medium_margin"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_accept"
            style="@style/DigiButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_action_positive_ok" />

    </LinearLayout>

</LinearLayout>