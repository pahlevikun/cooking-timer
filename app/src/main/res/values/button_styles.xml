<resources>
    <style name="DigiButton" parent="Widget.AppCompat.Button.Borderless" />
    <style name="DigiButton.Small" parent="Widget.AppCompat.Button.Small" />

    <style name="DigiButton.Primary" parent="DigiButton">
        <item name="android:fontFamily">@font/gs_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_xml_button_normal_primary</item>
    </style>

    <style name="DigiButton.Secondary" parent="DigiButton">
        <item name="android:fontFamily">@font/gs_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_xml_button_normal_secondary</item>
    </style>
</resources>